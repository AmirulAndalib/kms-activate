<Window x:Class="kms_activate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:win10_activate"
        mc:Ignorable="d"
        Title="kms-activate   -- by jm33_ng" Height="249.189" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button" Content="Activate!" HorizontalAlignment="Center" FontFamily="Microsoft Yahei UI" FontSize="12" Margin="37,139,37,10" VerticalAlignment="Top" Width="300" Height="54" Click="Button_Click" RenderTransformOrigin="0.491,1.127"/>
        <TextBox Name="TextBox" HorizontalAlignment="Left" Height="23" Margin="175,17,0,0" TextWrapping="NoWrap" AcceptsReturn="False" Text="kms.03k.org" VerticalAlignment="Top" Width="172" TextChanged="TextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="47,18,0,0" TextWrapping="Wrap" Text="KMS Server:" VerticalAlignment="Top" RenderTransformOrigin="0.203,1.17"/>
        <CheckBox Name="ShowDebug"  Content="Show debug info" HorizontalAlignment="Left" Margin="47,109,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Height="17" Width="132"/>
        <TextBlock HorizontalAlignment="Left" Margin="47,48,0,0" TextWrapping="Wrap" Text="OSPP.VBS:" VerticalAlignment="Top"/>
        <TextBox Name="OsppPath" TextWrapping="NoWrap" AcceptsReturn="False" HorizontalAlignment="Left" Height="19" Margin="175,45,0,0" VerticalAlignment="Top" Width="172" TextChanged="TextBox_TextChanged_1"/>
        <RadioButton Name="windows_option" Content="Windows" HorizontalAlignment="Left" Margin="47,80,0,0" VerticalAlignment="Top" Checked="Windows_option_Checked" Width="79"/>
        <RadioButton Name="office_option" Content="Office" HorizontalAlignment="Left" Margin="281,80,0,0" VerticalAlignment="Top" Checked="Office_option_Checked" RenderTransformOrigin="-0.589,0.861" Width="66"/>
    </Grid>
</Window>
